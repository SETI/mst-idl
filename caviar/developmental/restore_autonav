slash = rstrpos( image_name, '/' )
image_dir = strmid( image_name, 0, slash+1 )
savefile = image_dir + 'autonav.sav'
if keyword_set(findfile(savefile)) then begin

  print, 'Restoring autonav information from '+savefile
  restore, savefile
  jan = (where( strmid(image_name,slash+1,11) eq strmid(autonav[(where(legend eq 'Image_Name'))[0],*],0,11), count ))[0]
  if count eq 0 then begin
    print, image_name+' not found in list of autonav filenames.  No autonav information loaded.'
  endif else if count gt 1 then begin
    print, image_name+' found multiple times in list of autonav filenames.  No autonav information loaded.'
  endif else begin
    optic_axis_twist = float(autonav[ (where(legend eq 'Optic_Axis_Twist'))[0], jan ]) * !dpi / 180
    optic_axis_dec = float(autonav[ (where(legend eq 'Optic_Axis_DEC'))[0], jan ]) * !dpi / 180
    optic_axis_ra = float(autonav[ (where(legend eq 'Optic_Axis_RA'))[0], jan ]) * !dpi / 180
  endelse

endif

cspice_eul2m,optic_axis_twist,((0.5d0*!dpi)-optic_axis_dec),((0.5d0*!dpi)+optic_axis_ra),3,1,3,cmat

end